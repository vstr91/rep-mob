<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.vostre.repertori">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <!-- <uses-permission android:name="android.permission.GET_ACCOUNTS" /> -->
    <!-- <uses-permission android:name="android.permission.READ_PROFILE" /> -->
    <!-- <uses-permission android:name="android.permission.READ_CONTACTS" /> -->
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".service.AtualizaDadosService"
            android:enabled="true" />
        <service android:name="com.google.android.gms.analytics.CampaignTrackingService" />

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RepertorioActivity"
            android:label="@string/title_activity_repertorio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EventosActivity"
            android:label="@string/title_activity_eventos"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MusicaDetalheActivity"
            android:label="@string/title_activity_musica_detalhe"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="musicas"
                    android:scheme="draffonso" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventoDetalheActivity"
            android:label="@string/title_activity_evento_detalhe"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="eventos"
                    android:scheme="draffonso" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RepertorioDetalheActivity"
            android:label="@string/title_activity_repertorio_detalhe"
            android:screenOrientation="portrait" />
        <activity android:name=".BaseActivity" />
        <activity
            android:name=".ArtistasActivity"
            android:label="@string/title_activity_artistas"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RelatoriosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CronometroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MusicaProjetoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MusicaRepertorioActivity"
            android:label="@string/title_activity_musica_repertorio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MusicaEventoActivity"
            android:label="@string/title_activity_musica_evento"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CifraMusicaEventoActivity"
            android:label="@string/title_activity_cifra_musica_evento"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CifraMusicaRepertorioActivity"
            android:label="@string/title_activity_cifra_musica_repertorio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EstiloDetalheActivity"
            android:label="@string/title_activity_estilo_detalhe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ArtistaDetalheActivity"
            android:label="@string/title_activity_artista_detalhe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LetraActivity"
            android:label="@string/title_activity_letra"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CifraActivity"
            android:label="@string/title_activity_cifra"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EventoDetalhePdfActivity"
            android:label="@string/title_activity_artista_detalhe"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProjetoDetalhePdfActivity"
            android:label="@string/title_activity_artista_detalhe"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RepertorioDetalhePdfActivity"
            android:label="@string/title_activity_artista_detalhe"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity android:name=".BarcodeCaptureActivity"></activity>
    </application>

</manifest>